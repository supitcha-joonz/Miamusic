                <button class="btn  btn-sm dropdown-toggle" type="button" id="dropdownMenuButton1" data-bs-toggle="dropdown" aria-expanded="false">
                  <strong><%= currentUser.username %></strong> 
                </button>
                <ul class="dropdown-menu" aria-labelledby="dropdownMenuButton1">
                  <li><a class="dropdown-item" href="/user/<%= currentUser._id %>"><%= currentUser.username %></a></li>
                  <% if(currentUser && currentUser.isadmin){ %>
                  <li><a class="dropdown-item" href="/admin">Admin</a></li>
                  <% } %>
                  <li><a class="dropdown-item" href="/favorite/<%= currentUser.username %>">Favorite</a></li>
                  <li><hr class="dropdown-divider"></li>
                  <li><a class="dropdown-item" href="/logout" onclick="return confirm('Are you sure you want to Logout?');">Logout</a></li>
                </ul>
              </div>
             
               <!--  <a class="nav-link" href="/logout">Logout</a> -->
             
            <% } %>
