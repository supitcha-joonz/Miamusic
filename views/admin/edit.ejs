<%- include('../partials/header.ejs') %>
<div class="container">
    <br>
  <form action="/admin/<%= music._id %>?_method=PUT" method="POST" enctype="multipart/form-data">
      <div class="mb-3">
        <label class="form-label">Song</label>
        <input type="text" class="form-control" name="music[song]" placeholder="<%= music.song %>" value="<%= music.song %>">
      </div>
      <div class="mb-3">
        <label class="form-label">Name</label>
        <input type="text" class="form-control" name="music[name]" placeholder="<%= music.name %>" value="<%= music.name %>">
      </div>
      <div class="mb-3">
        <label class="form-label">Image</label>
        <input type="file" class="form-control" name="image" accept="image/*">
      </div>
      <div class="mb-3">
        <label class="form-label">Lysics</label>
      <textarea class="form-control" rows="10"  name="music[lysics]" placeholder="<%= music.lysics %>" value="<%= music.lysucs %>" ></textarea><br>
      </div>
      <button type="submit" class="btn btn-primary">Submit</button>
      <a href="/admin">Go Back</a>
    </form>
  </div>


<%- include('../partials/footer.ejs') %>