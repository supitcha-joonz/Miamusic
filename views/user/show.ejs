<%- include('../partials/header.ejs') %>

<div class="scroll" style="width: 100%; height: 600px; overflow-y: scroll; scrollbar-arrow-color:blue; scrollbar-face-color: #e7e7e7; scrollbar-3dlight-color: #a0a0a0; scrollbar-darkshadow-color:#888888"> 
<section class="py-5 text-center container">
  <div class="row py-lg-5">
    <div class="col-lg-6 col-md-8 mx-auto">
      <h1 class="fw-light"><strong>PROFILE</strong></h1>
      <br>
      <img src= '<%= user.profileimg %>' width = '200px' height="200px" class="rounded-circle" >
      <p>
        <h1><%= user.firstname %></h1>
      </p>
      <br>
      <p> 
        <a href='mailto: <%= user.email %>' style="text-decoration:none"> <%= user.email %> </a>
      </p>
      </p>
    </div>
  </div>
  <a href='/user/<%= user._id %>/edit' class="btn btn-warning">Edit</a>
</section>


<div class="album py-5 bg-light">
  <div class="container">
    <h3 align="left">Your Collections:</h3>
    <br>
    <div class="row row-cols-1 row-cols-sm-2 row-cols-md-3 g-3">
      <% collections.forEach(function(collection){ %>
      <div class="col">
        <div class="card shadow-sm">
          <img src="<%= collection.image %>" class="card-img-top" height="250px">
          <div class="card-body">
            <h5 class="card-title"><a href='/collection/<%= collection.id %>' style="text-decoration:none; color:#000000;"> <%= collection.name %></a></h5>
            <% }); %>
            <div class="d-flex justify-content-between align-items-center">
            </div>
          </div>
        </div>
      </div>
  </div>
</div>
</div>
<%- include('../partials/footer.ejs') %>